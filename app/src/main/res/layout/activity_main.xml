<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.MainActivity">

    <TextView
        android:id="@+id/uitvapptitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:text="@string/appshopify"
        android:textColor="@color/colorPrimary"
        android:textSize="75dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/welcomenote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/easy_shopping"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/uitvapptitle"
        android:gravity="right"
        android:textSize="25dp"
        android:textStyle="bold"
        android:paddingRight="100dp"
        />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/uibtnloginuser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/login_as_user"
        android:elevation="10dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="25dp"
        android:background="@drawable/buttondesign"
        app:layout_constraintBottom_toTopOf="@+id/uibtnloginshopowner"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/uibtnloginshopowner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/login_as_shop_owner"
        android:elevation="10dp"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:background="@drawable/buttondesign"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
       android:layout_margin="25dp"
        />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcomenote" />
</androidx.constraintlayout.widget.ConstraintLayout>